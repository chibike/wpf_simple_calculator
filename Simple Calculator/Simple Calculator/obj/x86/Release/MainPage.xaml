<Page
    x:Class="Simple_Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Simple_Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--<TextBlock x:Name="titleText"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="351,44,0,0"
               TextWrapping="Wrap"
               Text="Simple Calculator"/>-->

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Number Buttons-->
        <Button x:ConnectionId='2' x:Name="btnSeven" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                       >7</Button>
        <Button x:ConnectionId='3' x:Name="btnEight" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                       >8</Button>
        <Button x:ConnectionId='4' x:Name="btnNine" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                      >9</Button>

        <Button x:ConnectionId='5' x:Name="btnFour" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                      >4</Button>
        <Button x:ConnectionId='6' x:Name="btnFive" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                      >5</Button>
        <Button x:ConnectionId='7' x:Name="btnSix" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                     >6</Button>

        <Button x:ConnectionId='8' x:Name="btnOne" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                     >1</Button>
        <Button x:ConnectionId='9' x:Name="btnTwo" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                     >2</Button>
        <Button x:ConnectionId='10' x:Name="btnThree" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                       >3</Button>

        <Button x:ConnectionId='11' x:Name="btnZero" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                      >0</Button>
        <Button x:ConnectionId='12' x:Name="btnDot" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold"                     >.</Button>
        
        <!--Function Buttons-->
        <Button x:ConnectionId='13' x:Name="btnOpenBracket" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                             >(</Button>
        <Button x:ConnectionId='14' x:Name="btnCloseBracket" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                              >)</Button>
        <Button x:ConnectionId='15' x:Name="btnPercentage" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                            >%</Button>
        <Button x:ConnectionId='16' x:Name="btnClear" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                       >CE</Button>
        <Button x:ConnectionId='17' x:Name="btnDivide" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                        >/</Button>
        <Button x:ConnectionId='18' x:Name="btnMultiply" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                          >*</Button>
        <Button x:ConnectionId='19' x:Name="btnSubtract" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                          >-</Button>
        <Button x:ConnectionId='20' x:Name="btnAdd" Grid.Row="6" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FFEBEBEB"                     >+</Button>
        <Button x:ConnectionId='21' x:Name="btnEqual" Grid.Row="6" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" FontSize="30" FontWeight="Bold" Background="#FF0073C8" Foreground="White"                       >=</Button>
        
        <!--Display Text Box-->
        <TextBox x:ConnectionId='22' x:Name="textBoxSolutionView" IsReadOnly="True" TextAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="10" Text="" FontSize="30" FontWeight="Bold" PlaceholderText="0"></TextBox>
        <TextBox x:ConnectionId='23' x:Name="textBoxNumericView" IsReadOnly="True" TextAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="#FFE4F1F9" Margin="10" Text="" FontSize="60" FontWeight="Bold" PlaceholderText="0"                                             ></TextBox>

    </Grid>
</Page>

